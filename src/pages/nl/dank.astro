---
import Layout from '../../layouts/Layout.astro';
import InstagramButton from '../../components/InstagramButton.astro';
import { Picture } from 'astro:assets';
import Logo from '../../assets/logo.png';
---

<Layout language="nl" title="Dank je wel!" description="Aan de rand van Nationaal Park De Hoge Kempen, midden in de Belgische bossen en op fietsafstand van Maastricht, staat een stijlvol boshuisje waar je binnenkort kunt overnachten.">
  <div class="flex flex-col items-center justify-center flex-grow w-full">
    <section class="max-w-3xl text-center mb-12">
      <Picture src={Logo} class="w-2xs md:w-md mx-auto mb-8" title="Boswald" alt="Boswald" />
      <p class="font-text text-base md:text-xl leading-snug">Bedankt voor je aanmelding! We houden je op de hoogte. Heb je vragen of opmerkingen? Mail naar <a href="mailto:mail@popupcity.net" class="italic">mail@popupcity.net</a>.</p>
    </section>
  </div>
  <InstagramButton />
</Layout>
